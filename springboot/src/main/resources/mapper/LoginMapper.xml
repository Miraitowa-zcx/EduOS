<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.eduos.springboot.mapper.LoginMapper">

    <!-- 登录查询 -->
    <select id="getByUserAndPass" resultType="org.eduos.springboot.entity.BaseEntity">
        <!-- 如果是管理员 -->
        <if test="role == 'admin'">
            select * from admin
            where username = #{username}
            and role = #{role}
        </if>
        <!-- 如果是学生 -->
        <if test="role == 'student'">
            select * from student
            where username = #{username}
            and role = #{role}
        </if>
        <!-- 如果是教师 -->
        <if test="role == 'teacher'">
            select * from teacher
            where username = #{username}
            and role = #{role}
        </if>
    </select>
</mapper>
